{
  "name": "florenapps-hub",
  "private": true,
  "version": "1.0.0",
  "description": "Hub for Floren's mini web apps - solving boring tasks fast",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-apps.js",
    "build:hub": "vite build",
    "build:apps": "npm run build:qr && npm run build:unfollow && npm run build:drinkmaster",
    "build:qr": "cd apps/qr && npm run build",
    "build:unfollow": "cd apps/unfollow && npm run build",
    "build:drinkmaster": "cd apps/drinkmaster && npm run build",
    "install:all": "npm install && npm run install:apps",
    "install:apps": "cd apps/qr && npm install && cd ../unfollow && npm install && cd ../drinkmaster && npm install",
    "vercel:install": "npm run install:apps",
    "vercel:build": "npm run build:hub",
    "copy:apps": "node scripts/copy-apps.js",
    "dev:qr": "cd apps/qr && npm run dev",
    "dev:unfollow": "cd apps/unfollow && npm run dev",
    "dev:drinkmaster": "cd apps/drinkmaster && npm run dev",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{js,css,html,md}\""
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "prettier": "^3.1.0"
  },
  "keywords": ["mini-apps", "tools", "productivity", "privacy-friendly"],
  "author": "Floren",
  "license": "MIT"
}
